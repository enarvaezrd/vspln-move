<launch>
  <arg name="usb_port"                default="/dev/ttyUSB0"/>
  <arg name="dxl_baud_rate"           default="1000000"/>
  <arg name="namespace"               default="dynamixel_workbench_pro"/>

  <arg name="use_moveit"              default="false"/>
  <arg name="use_joint_state"         default="true"/>
  <arg name="use_cmd_vel"             default="false"/>

  <arg name="launch_joystick"             default="false"/> 
  <arg name="launch_request_node"             default="true"/>

  <param name="dynamixel_info"          value="$(find ed_pmov)/config/pro_arm_joints.yaml"/>

  <node name="$(arg namespace)" pkg="dynamixel_workbench_controllers" type="dynamixel_workbench_controllers"
        required="true" output="screen" args="$(arg usb_port) $(arg dxl_baud_rate)">
    <param name="use_moveit"              value="$(arg use_moveit)"/>
    <param name="use_joint_states_topic"  value="$(arg use_joint_state)"/>
    <param name="use_cmd_vel_topic"       value="$(arg use_cmd_vel)"/>
    <rosparam>
      publish_period: 0.01
      dxl_read_period: 0.01
      dxl_write_period: 0.01
    </rosparam>
  </node>

   <node if="$(arg launch_joystick)" name="joystick_node" pkg="joy" type="joy_node"/>
   <node if="$(arg launch_request_node)" name="pro_requests" pkg="ed_control" type="pro_motors_control"/>
</launch>
