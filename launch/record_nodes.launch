<launch>
    <arg name="real_robots" default="false" />
    <arg name="simulation" default="true" />
 <node if="$(arg real_robots)" pkg="rosbag" type="record" name="record_rosbag"
       args="record -o  /home/edd/catkin_ws/src/ed_pmov/bags/rosbag  
			/tag_detections 
			/robot1/odom 
			/robot2/ground_truth/state 
			/robot1/joint_states 
			/robot2/command/motor 
			/robot2/motor_status" />
<group if="$(arg foo)">
  <node if="$(arg simulation)" pkg="rosbag" type="record" name="record_rosbag"
       args="record -o  /home/edd/catkin_ws/src/ed_pmov/bags/rosbag  
			/tag_detections 
			/robot1/odom 
			/robot2/ground_truth/state 
			/robot1/joint_states 
			/robot2/command/motor 
			/robot2/motor_status" />
</group>
 

</launch>
